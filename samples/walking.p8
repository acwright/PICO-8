--walking
--by aaron wright

function _init()
	sprite=1
	delay=3
	x=63
	flipped=false
	walking=false
end

function _update()
	walking=false
	
	if btn(0) then
		x-=1
		x=mid(-1,x,120)
		flipped=true
		walking=true	
	end
	if btn(1) then
		x+=1
		x=mid(-1,x,121)
		flipped=false
		walking=true	
	end
	
	if walking then
		walk()
	else
		sprite=1
	end
end

function _draw()
	cls(5)
	spr(sprite,x,63,1,1,flipped)
end
-->8
--walking

function walk()
	if delay<0 then
		if sprite>3 then sprite=1 end
		sprite+=1
		delay=3
	end
	delay-=1
end
